cabal-version: 2.2

name:                shelley-spec-non-integral
version:             0.1.0.0
license:             Apache-2.0
author:              IOHK Formal Methods Team
maintainer:          formal.methods@iohk.io
description:         Implementation decision for non-integer calculations
build-type:          Simple

extra-source-files:
  README.md
  ChangeLog.md

source-repository head
  type: git
  location: https://github.com/input-output-hk/cardano-ledger-specs.git
  subdir:   dependencies/non-integer

flag development
    description: Disable '-Werror'
    default: False
    manual: True

common base                         { build-depends: base                             >= 4.7        && < 5        }

common project-config
  default-language:   Haskell2010

  ghc-options:        -Wall
                      -Wcompat
                      -Wincomplete-record-updates
                      -Wincomplete-uni-patterns
                      -Wredundant-constraints

  if (!flag(development))
    ghc-options:      -Werror

  if impl(ghc >= 8.10)
    ghc-options:      -Wunused-packages

library
  import:             base, project-config

  exposed-modules:       Shelley.Spec.NonIntegral
  hs-source-dirs: src
